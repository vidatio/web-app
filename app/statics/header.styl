header

    #line-right
        background $color-green
        height 8px

    #line-left
        background $color-red
        height 8px

    .middle
        text-align center

    #navigation
        clear both
        max-width 1024px
        margin 0 auto
        padding 30px 0

        .editor-panel
            display flex
            flex-direction row
            display -webkit-flex /* Safari */
            -webkit-flex-direction row

        .separator
            width 1px
            background-color $color-green

    #navigation.editor
        max-width 98%

    #logo
        background url(../images/logo-text-black.svg) no-repeat
        background-size 111px
        width 111px
        height 40px
        float left

    #back-to-import
        position relative
        height 40px
        text-align center
        float right

        button.btn
            padding-top 8px

        button.btn-primary
            height 40px
            font-size 16px

            .btn-tip
                padding-left 0
                padding-right 1px

            .fui-arrow-left
                &::before
                    margin-right 10px
                    font-size 14px

    #save-dataset
        float left
        height 40px


    .tab
        border-bottom 4px solid $color-passive
        display inline-block
        width 50%
        height 40px
        line-height 41px
        background $color-passive
        position relative
        float left
        color $color-table-even-active
        text-align center
        font-family Colaborate, $fonts
        font-size 16px
        box-sizing border-box

        &:hover
            color $color-white
            border-bottom-color $color-green

            &::after
                border medium solid transparent
                content " "
                height 0
                left 50%
                pointer-events none
                position absolute
                top 39px
                width 0
                border-top-color $color-green
                border-width 10px
                margin-left -10px

            &::before
                border-top-color $color-green
                border-width 10px
                margin-left -10px

        &.active
            border-bottom 4px solid $color-green
            line-height 41px
            color $color-white

            &::after
                border medium solid transparent
                content " "
                height 0
                left 50%
                pointer-events none
                position absolute
                top 39px
                width 0
                border-top-color $color-green
                border-width 10px
                margin-left -10px

            &::before
                border-top-color $color-green
                border-width 10px
                margin-left -10px


    .border-right
        border-right none


    .menu-buttons
        height 100%
        text-align right

        div
            display inline

        a
            line-height 40px
            vertical-align middle
            text-align center
            width 40px
            height 40px
            display inline-block
            margin-left 3px
            background $color-passive
            border-radius 4px
            color $color-grey-light

            &:hover
                color $color-green

        .menu-active
            color $color-green

        a#menu
            font-size 20px

        a#login-button
            font-size 23px
            padding-left 2px


@media(max-width: 550px)
    #back-to-import-button
        display none

@media(max-width: 767px)
    #navigation
        .editor-panel
            margin-top: 20px

@media(min-width: 768px) and (max-width: 849px)
    #back-to-import-button
        margin-right -10px

        button.btn-primary
            font-size 14px !important

            .fui-arrow-left
                &::before
                    font-size 12px !important

    header
        .tab
            font-size 14px

@media(min-width: 850px)
    #back-to-import-button
        margin-right 10px

    #navigation
        .editor-panel
            position absolute
            margin 0 auto
            left 0
            right 0
            max-width 600px
