@require "colors"

.thin-font
    font-family Colaborate-Thin, Arial, Helvetica, sans-serif

.light-font
    font-family Colaborate-Light, Arial, Helvetica, sans-serif

.bold-font
    font-family Colaborate-Bold, Arial, Helvetica, sans-serif

h1, h2, h3, h4, h5, h6
    padding 0
    margin 0
    display inline-block

h1
    font-family Colaborate-Bold, $fonts
    font-size 30px
    text-transform uppercase

h2
    font-family Colaborate-Bold, $fonts
    font-size 16px
    text-transform uppercase

h3
    font-family Colaborate-Medium, $fonts
    font-size 16px

h4
    font-family Colaborate-Light, $fonts
    font-size 16px

.dotgrid
    background-image url(../images/dotgrid-dunkel-transp.png)

.underline-red
    border-bottom 3px solid $color-red

.underline-turqoise
    border-bottom 3px solid $color-green

.font-red
    color $color-red

.font-cyan
    color $color-green

.bg-cyan
    background-color $color-green

.bg-dark
    background-color $color-grey-dark

html, body
    padding 0
    margin 0
    width 100%
    height 100%
    position relative
    font-family Colaborate, Arial, Helvetica, sans-serif
    font-size 16px
    color $color-grey-dark
    background-color $color-grey-light

a:focus
    outline none

.app-view
    padding-bottom 100px

.wrapper
    min-height 100%
    position relative

.wrapper-content
    max-width 1024px
    margin 0 auto

.layout-3-columns
    .col-sm-4
        &:first-child
            & > div
                margin-right 17.66px
            .col-wrapper
                margin-right 28px

        &:nth-child(2n)
            & > div
                margin-right 8.33px
                margin-left 8.33px
            .col-wrapper
                margin-right 14px
                margin-left 14px

        &:last-child
            & > div
                margin-left 17.66px
            .col-wrapper
                margin-left 28px

@media(max-width 768px)
    .layout-3-columns .col-sm-4 .col-wrapper
        margin 0 !important

a:link, a:visited
    color white
    text-decoration none

a:hover, a:active, a:focus
    color $color-hover-dark


.button
    position relative
    color $color-white
    background-color $color-green
    -webkit-box-shadow 0 3px 0 $color-border
    -moz-box-shadow 0 3px 0 $color-border
    box-shadow 0 3px 0 $color-border

.button:active,
.button:active span
    top 3px
    -webkit-box-shadow none
    -moz-box-shadow none
    box-shadow none

.button:hover,
.button:hover span
    background-color $color-hover-dark
    color $color-white

.border-left
    border-top-left-radius 3px
    border-bottom-left-radius 3px
.border-right
    border-top-right-radius 3px
    border-bottom-right-radius 3px

.ng-toast

    .custom-backgrounds
        .alert
            background: $color-white
            color: $color-grey-dark
            border-radius 0
            box-shadow $box-shadow-size $color-shadow
            border none

            div
                border-radius none

            button
                opacity .3

                &:hover
                    opacity .6

        .alert-danger
            border-top 3px solid $color-red

        .alert-success
            border-top 3px solid $color-green

[ng\:cloak]
[ng-cloak]
[data-ng-cloak]
[x-ng-cloak]
.ng-cloak
.x-ng-cloak
    display none !important

/* defines how many x-pixels the menu has to be pushed to the left side*/
.cbp-spmenu-push-toleft
    left -350px

@media(max-width: 500px)
    .cbp-spmenu-push-toleft
        left -290px
