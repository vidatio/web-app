#landing-page
    section
        padding 50px 0

    h1
        margin-bottom 20px

    #intro
        padding 0

        #slogan
            font-family Colaborate-Thin, $fonts
            font-size 30px
            margin-bottom 10px

        .diagram
            img
                width 100%
                box-shadow 2px 2px 2px 0px $color-shadow
                border-radius 4px

        .description
            margin 20px 0 10px

        ol
            counter-reset li-counter
            list-style-type none
            margin 0
            padding 0

            & > li
                position relative
                margin-left 25px
                margin-bottom 4px

                &.active
                    &:before
                        background-color $color-green

                &:before
                    position absolute
                    top 2px
                    left -25px
                    width 20px
                    height 20px
                    line-height 22px
                    border-radius 50%
                    background-color $color-red
                    color $color-white
                    text-align center
                    content counter(li-counter)
                    counter-increment li-counter

        .get-started
            position relative
            width 175px
            margin 100px auto 0

            a
                width inherit
                padding 10px
                font-size 30px
                text-align center
                display inline-block
                line-height 30px
                border-radius 5px

                &:visited
                    color $color-white

                span
                    position absolute
                    width 50px
                    top -20px
                    right -15px
                    display inline-block
                    transform rotate(10deg)
                    font-size 50px
                    padding-top 15px
                    padding-bottom 15px
                    border-radius 5px
        .promo
            .video
                width 100%
                border 1px solid

                img
                    width 100%

    #usp
        margin-top -180px
        color $color-white
        padding-top 0
        background url(../images/dotgrid.png) $color-grey-dark
        overflow hidden
        width 100%

        div
            text-align center

        .content
            margin-top 50px

        .usp-icon
            font-size 90px

        .shape
            min-width 100%
            margin-top -1px
            border-style none
            width calc(100% + 6px)
            margin-left -3px



    #featured-vidatios
        img.featured
            width 100%
            -webkit-box-shadow 2px 2px 2px 0px $color-shadow
            -moz-box-shadow 2px 2px 2px 0px $color-shadow
            box-shadow 2px 2px 2px 0px $color-shadow
            border-radius 4px

        div
            font-family Colaborate-Medium, $fonts
            margin-top 10px

        a
            color $color-grey-dark
            &:hover
                color $color-green

        .browse
            text-align center
            margin-top 30px

    #popular-categories
        min-height 500px

        /* first image is in the foreground, second image in the background*/
        background url(../images/kategorien-overlay.svg) no-repeat scroll 50% 50%, url(../images/placeholder-students.jpg)
        width 100%

    #customers
        h3
        h4
            display block
            margin-bottom 10px

/* space between live diagram and video in intro section */
@media(max-width: 767px)
    #landing-page #intro .promo
        margin-top 20px

/* move get-started button and shape that they do not overlap */

@media(max-width: 700px)
    #landing-page #intro .get-started
        margin-top 50px
        margin-bottom 180px

@media(min-width: 701px)
    #landing-page #intro .get-started
        margin-top 80px
        margin-bottom 140px

@media(min-width: 801px)
    #landing-page #intro .get-started
        margin-top 100px
        margin-bottom 80px

@media(max-width: 767px)
    #landing-page #popular-categories
        /* first value concerns always the foreground image, the last value always the background image */
        background-size 95%, cover

@media(min-width: 768px) and (max-width: 1100px)
    #landing-page #popular-categories
        background-size 90%, cover

@media(min-width: 1101px) and (max-width: 1200px)
    #landing-page #popular-categories
        background-size 85%, cover

    #landing-page #intro .get-started
        margin-top 60px
        margin-bottom 100px

@media(min-width: 1201px) and (max-width: 1400px)
    #landing-page #popular-categories
        background-size 70%, cover

    #landing-page #intro .get-started
        margin-top 60px
        margin-bottom 100px

@media(min-width: 1401px) and (max-width: 1600px)
    #landing-page #popular-categories
        background-size 65%, cover

@media(min-width: 1601px)
    #landing-page #popular-categories
        background-size 52%, cover

@media(min-width: 1400px)
    #landing-page #intro .get-started
        margin-top 60px
        margin-bottom 10px
